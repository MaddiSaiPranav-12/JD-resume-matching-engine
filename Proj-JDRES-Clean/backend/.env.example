# JD-Resume Matching Engine - Environment Variables
# Copy this file to .env and fill in your values

# =====================================
# OpenAI Configuration (Required)
# =====================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# =====================================
# Server Configuration
# =====================================
# Port for the backend server (default: 3000)
PORT=3000

# Node environment (development, production, test)
NODE_ENV=development

# =====================================
# Python Ranking Service (Optional)
# =====================================
# URL for the Python TF-IDF ranking service
# Only needed if you're running the ranking-service
RANKING_SERVICE_URL=http://localhost:5000
